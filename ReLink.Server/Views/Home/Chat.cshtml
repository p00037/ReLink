@model ReLink.Server.Models.ChatViewModel

@{
    ViewData["Title"] = "Chat";
}

<!-- ▼LINE風ここから -->
<div class="line__container">
    <!-- タイトル -->
    <div class="line__title">
        ReLink
    </div>

    <!-- ▼会話エリア scrollを外すと高さ固定解除 -->
    <div class="line__contents scroll" id="messagesList">

        @foreach (var item in Model.MessageEntitys)
        {
            @*<li>@item.UserName says @item.Massage</li>*@
            @if (Model.UserName != item.UserName)
            {
                <!-- 相手の吹き出し -->
                <div class="line__left">
                    <figure>
                        <img src="~/icon.png" />
                    </figure>
                    <div class="line__left-text">
                        <div class="name">@item.UserName</div>
                        <div class="text">@item.Massage</div>
                    </div>
                </div>
            }
            else
            {
                <div class="line__right">
                    <div class="text">@item.Massage</div>
                </div>
            }
        }
    </div>
    <!--　▲会話エリア ここまで -->
</div>
<!--　▲LINE風ここまで -->

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" value="@Model.UserName"/></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>


